zone "test.org" IN {
        type master;
        file "/var/lib/bind/test.org.zone";
        allow-update { <%= @master_ip %>; 127.0.0.1; };
};

zone "<%= @ptr_head %>.in-addr.arpa" IN {
        type master;
        file "/var/lib/bind/<%= @ptr_head %>.in-addr.arpa.zone";
        allow-update { <%= @master_ip %>; 127.0.0.1; };
};
