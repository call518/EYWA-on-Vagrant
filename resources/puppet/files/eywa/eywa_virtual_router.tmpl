NAME="@@__UID__@@-ONE-Router"
CONTEXT=[
	ONE_UID="@@__UID__@@",
	IS_EYWA="yes",
	IS_VR="yes",
	FILES="/var/lib/one/files/eywa-vr/init.sh /var/lib/one/files/eywa-vr/iptables.rules /var/lib/one/files/eywa-vr/haproxy-cfg-gen /var/lib/one/files/eywa-vr/haproxy.cfg.tmpl /var/lib/one/files/eywa-vr/haproxy.init",
	PASSWD="$USER[ROOT_PW]",
	SSH_PUBLIC_KEY="$USER[SSH_PUBLIC_KEY]",
	ETH0_IP="$NIC[IP,NETWORK=\"Public-Net\"]",
	ETH1_IP="$NIC[IP,NETWORK=\"@@__UID__@@-Private-Net\"]"
]

CPU="2"

DISK=[IMAGE="EYWA-Virtual-Router",IMAGE_UID="0"]

FEATURES=[ACPI="yes"]

GRAPHICS=[LISTEN="0.0.0.0",TYPE="VNC"]

MEMORY="1024"

NIC=[MODEL="virtio",NETWORK="Public-Net",NETWORK_UID="0"]

NIC=[MODEL="virtio",NETWORK="@@__UID__@@-Private-Net",NETWORK_UID="0"]

OS=[ARCH="x86_64",BOOT="hd"]
